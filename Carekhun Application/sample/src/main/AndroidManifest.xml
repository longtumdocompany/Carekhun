    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="false" />
    <!-- ******************************************************************** -->

    <application
        android:hardwareAccelerated="false"
        android:largeHeap="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="co.app.longtumdo.carekhun.MainActivityCareKhun"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Firebase -->
        <service
            android:name="co.app.longtumdo.carekhun.FirebaseMessaging">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

        <service
            android:name="co.app.longtumdo.carekhun.FirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>

        <!-- start google plus login -->
        <activity android:name="com.facebook.FacebookActivity" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <!-- end google plus login -->

        <activity
            android:name="co.app.longtumdo.carekhun.LoginGoogle"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name="co.app.longtumdo.carekhun.LoginFacebook"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name="co.app.longtumdo.carekhun.LoginOtherAccount"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name="co.app.longtumdo.carekhun.LoginWithPhone"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name="co.app.longtumdo.carekhun.ManageUserActivity"
            android:screenOrientation="portrait">
        </activity>

